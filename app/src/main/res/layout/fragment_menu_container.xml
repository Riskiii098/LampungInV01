<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button Back Container -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:id="@+id/btn_back_container"
            android:layout_marginStart="-12dp">
            
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/black"
                android:clickable="false"
                android:focusable="false"/>
                
        </FrameLayout>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_rounded"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:hint="Cari Layanan"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp"
            android:drawableEnd="@drawable/ic_search"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <!-- Tabs Container -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <!-- Tab Unggulan -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_unggulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_unggulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggulan"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_unggulan"
                android:layout_marginBottom="4dp"/>

            <View
                android:id="@+id/indicator_unggulan"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#F8C300"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_unggulan"
                app:layout_constraintStart_toStartOf="@id/tv_tab_unggulan"
                app:layout_constraintEnd_toEndOf="@id/tv_tab_unggulan"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Kategori -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_kategori"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_kategori"
                android:layout_marginBottom="4dp"/>

            <View
                android:id="@+id/indicator_kategori"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="#F8C300"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_kategori"
                app:layout_constraintStart_toStartOf="@id/tv_tab_kategori"
                app:layout_constraintEnd_toEndOf="@id/tv_tab_kategori"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>