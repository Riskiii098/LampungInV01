<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_yellow_white"
    tools:context=".PaymentMethodActivity">

    <!-- Header Section (Match Informasi Kendaraan) -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Pilih Metode Pembayaran"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <!-- Content Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintBottom_toTopOf="@id/bottom_payment_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- QRIS Section -->
            <TextView
                android:id="@+id/tv_qris_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-medium"
                android:text="QRIS"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_qris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/qris"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="QRIS"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_qris"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_qris"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- E-Wallet Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-medium"
                android:text="E-Wallet"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!-- ShopeePay -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_shopeepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/spay"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="ShopeePay"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_shopeepay"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_shopeepay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Gopay -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_gopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/gopay"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="Gopay"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_gopay"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_gopay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Virtual Akun Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-medium"
                android:text="Virtual Akun"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!-- BCA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/bca"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="BCA"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_bca"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_bca"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BRI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/bri"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="BRI"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_bri"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_bri"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bank Lampung -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bank_lampung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/banklampung"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-bold"
                        android:text="Bank Lampung"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/radio_bank_lampung"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_radio_outer_circle"
                        android:padding="2.5dp">

                        <View
                            android:id="@+id/radio_inner_bank_lampung"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#F8C300"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Payment Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_payment_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bayar"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 512.500"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayar"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:backgroundTint="#F8C300"
            app:cornerRadius="8dp"
            android:minWidth="120dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>