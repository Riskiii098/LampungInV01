<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_yellow_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- Header Container -->
        <FrameLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/laporangambar" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@android:color/white"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="start|top" />
        </FrameLayout>

        <!-- Slider Info Cards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_info_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Judul: Laporan Aktif Milikmu -->
        <TextView
            android:id="@+id/tv_laporan_aktif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Aktif Milikmu"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/rv_info_cards"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Kartu Laporan Aktif (Menunggu Verifikasi) -->
        <!-- Menggunakan LinearLayout dengan Custom Background agar border pasti muncul -->
        <LinearLayout
            android:id="@+id/card_laporan_aktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_border_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_laporan_aktif_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <!-- Image perlu clipToOutline agar ikut rounded corner -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/jalanan"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedTopImage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerusakan Infrastruktur"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:background="@drawable/bg_gray_rounded_50"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ada kerusakan jalan di perempatan, tolong segera diperbaiki"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"/>

                <!-- Action Bar Bawah -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_white_rounded_50"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp">
                         <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_circle_indicator"
                            android:backgroundTint="#FFD000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menunggu Verifikasi"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <!-- Action Icons (Like, Comment, Save) -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_like"
                        app:tint="#F7D918"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_komen"
                        app:tint="#F7D918"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_simpan"
                        app:tint="#F7D918"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Buat Laporan -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_buat_laporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F7D918"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/card_laporan_aktif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kamera"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Laporan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Garis Pemisah -->
        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_buat_laporan" />

        <!-- Header Laporan Warga -->
        <TextView
            android:id="@+id/tv_laporan_warga_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Warga Hari Ini"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/separator_line"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_lihat_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semua"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#F5B000"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_laporan_warga_title"
            app:layout_constraintTop_toTopOf="@id/tv_laporan_warga_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- List Laporan Warga (Manual Vertical Stack) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_laporan_warga_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Laporan Warga 1 (Sampah) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_border_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/jalanan2"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedTopImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerusakan Infrastruktur"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:background="@drawable/bg_gray_rounded_50"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sampah menumpuk di pinggir jalan mengganggu warga"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"/>

                    <!-- Action Bar Bawah -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_white_rounded_50"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">
                             <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle_indicator"
                                android:backgroundTint="#4BD85B"/> <!-- Hijau -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laporan Diterima"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_like"
                            app:tint="#F7D918"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_komen"
                            app:tint="#F7D918"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_simpan"
                            app:tint="#F7D918"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Laporan Warga 2 (Banjir) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_border_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/banjir5"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedTopImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keadaan Darurat"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:background="@drawable/bg_gray_rounded_50"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banjir setinggi lutut orang dewasa di Kemiling"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"/>

                    <!-- Action Bar Bawah -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_white_rounded_50"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">
                             <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle_indicator"
                                android:backgroundTint="#FF7010"/> <!-- Oranye -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laporan Diproses"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_like"
                            app:tint="#F7D918"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_komen"
                            app:tint="#F7D918"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_simpan"
                            app:tint="#F7D918"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>