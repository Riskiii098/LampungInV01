<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktivitas"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tabs Container -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <!-- Tab Laporan Saya -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_laporan_saya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan Saya"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_laporan"
                android:layout_marginBottom="8dp"/>

            <View
                android:id="@+id/indicator_laporan"
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:background="#F8C300"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_laporan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Disimpan -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_disimpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_disimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disimpan"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_disimpan"
                android:layout_marginBottom="8dp"/>

            <View
                android:id="@+id/indicator_disimpan"
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:background="#F8C300"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_disimpan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Container Konten (Untuk isi list nanti) -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <!-- Placeholder text sementara -->
        <TextView
            android:id="@+id/tv_content_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Konten Laporan Saya"
            android:textColor="@android:color/darker_gray"/>
            
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>