<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_yellow_white">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktivitas"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tabs Container -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <!-- Tab Laporan Saya -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_laporan_saya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan Saya"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_laporan"
                android:layout_marginBottom="8dp"/>

            <View
                android:id="@+id/indicator_laporan"
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:background="#F8C300"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_laporan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Disimpan -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_disimpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_tab_disimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disimpan"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/indicator_disimpan"
                android:layout_marginBottom="8dp"/>

            <View
                android:id="@+id/indicator_disimpan"
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:background="#F8C300"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/tv_tab_disimpan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Container Konten (Untuk isi list nanti) -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="124dp"
            android:layout_marginTop="24dp">

            <!-- Konten Laporan Saya -->
            <include
                android:id="@+id/layout_laporan_content"
                layout="@layout/layout_tab_laporan_saya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>
            
            <!-- Content for Tab Disimpan -->
            <LinearLayout
                android:id="@+id/layout_disimpan_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Toggle Buttons Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/btn_filter_berita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berita"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:background="@drawable/bg_black_rounded_50"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/btn_filter_laporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan Warga"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_gray_rounded_50"
                        android:textColor="@color/black"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

                <!-- Saved Content Lists -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp">

                    <!-- Berita Empty State -->
                    <LinearLayout
                        android:id="@+id/layout_empty_berita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/beritaa2"
                            android:alpha="0.8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada berita yang kamu simpan"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_baca_berita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Baca Berita Sekarang"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/white"
                            android:paddingHorizontal="32dp"
                            app:backgroundTint="#F8C300"
                            app:cornerRadius="12dp"/>

                    </LinearLayout>

                    <!-- Laporan Warga Empty State -->
                    <LinearLayout
                        android:id="@+id/layout_empty_laporan_warga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/laporanwarga"
                            android:alpha="0.8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada laporan yang kamu simpan"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpan laporan untuk mengikuti progress dan diskusi pada laporan tersebut"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#9E9E9E"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_lihat_laporan_lainnya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Lihat Laporan Lainnya"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/white"
                            android:paddingHorizontal="32dp"
                            app:backgroundTint="#F8C300"
                            app:cornerRadius="12dp"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
                
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>