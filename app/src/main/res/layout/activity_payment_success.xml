<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_yellow_gradient"
    tools:context=".PaymentSuccessActivity">

    <!-- Decorative Dots (Background Layer) -->
    <!-- Yellow 1 - Top Left Corner -->
    <View
        android:id="@+id/dot_yellow_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_circle_indicator"
        android:backgroundTint="#FFD600"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Green 1 - Top Right Corner -->
    <View
        android:id="@+id/dot_green_1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/bg_circle_indicator"
        android:backgroundTint="#4CAF50"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Yellow 2 - Bottom Left Corner -->
    <View
        android:id="@+id/dot_yellow_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bg_circle_indicator"
        android:backgroundTint="#FFD600"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Green 2 - Bottom Right Corner -->
    <View
        android:id="@+id/dot_green_2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/bg_circle_indicator"
        android:backgroundTint="#4CAF50"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Yellow 3 - Top Center -->
    <View
        android:id="@+id/dot_yellow_3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_circle_indicator"
        android:backgroundTint="#FFD600"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container for the animation elements to center them -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/animation_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- 
           Reordered for Z-Index:
           1. Left & Right (Back)
           2. Center (Front)
           Center image is now smaller and overlaps more (negative margin increased).
        -->

        <!-- Left Circle (Green) - Bottom Left -->
        <ImageView
            android:id="@+id/img_left"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-55dp"
            android:layout_marginEnd="-30dp"
            android:src="@drawable/ceklis2"
            app:layout_constraintEnd_toStartOf="@+id/img_center"
            app:layout_constraintTop_toBottomOf="@+id/img_center"
            app:layout_constraintHorizontal_bias="1.0" />

        <!-- Right Circle (Green) - Bottom Right -->
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-55dp"
            android:layout_marginStart="-30dp"
            android:src="@drawable/ceklis3"
            app:layout_constraintStart_toEndOf="@+id/img_center"
            app:layout_constraintTop_toBottomOf="@+id/img_center" />

        <!-- Center Circle (Yellow) - Top of Pyramid (Placed last to be on top) -->
        <ImageView
            android:id="@+id/img_center"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ceklis1"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Success Text -->
    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-bold"
        android:text="Pembayaran Berhasil!"
        android:textColor="#F8C300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animation_container" />

    <!-- Button Selesai -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Cek Bukti Pembayaran"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="#F8C300"
        app:cornerRadius="8dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>