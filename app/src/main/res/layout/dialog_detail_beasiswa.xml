<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="600dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top Section: Image, Name, Subtitle, Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="32dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/ivDetailLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/beasiswa1"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvDetailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beasiswa Unggulan"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beasiswa S1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/daftar"
                                app:tint="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvDetailDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pendaftaran: 24 Jan - 30 Mar"
                                android:textSize="11sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beasiswa Unggulan adalah program bantuan pendidikan dari pemerintah untuk mendukung putra-putri terbaik Indonesia agar dapat menempuh pendidikan tinggi dan berkontribusi bagi pembangunan nasional. Beasiswa ini ditujukan bagi mahasiswa berprestasi, aparatur negara, serta masyarakat dengan komitmen akademik dan kepemimpinan."
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Requirements Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Persyaratan Umum"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- S1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Warga Negara Indonesia\nâ€¢ Lulusan SMA/SMK/sederajat\nâ€¢ Memiliki prestasi akademik/non-akademik"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- S2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Warga Negara Indonesia\nâ€¢ Lulusan S1\nâ€¢ Memiliki rekam jejak akademik dan/atau profesional"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- S3 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Warga Negara Indonesia\nâ€¢ Lulusan S2\nâ€¢ Memiliki rencana riset yang relevan dan berkontribusi keilmuan"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- Footer Note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persyaratan lengkap, ketentuan khusus, serta jadwal pendaftaran dapat berbeda setiap periode."
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-italic"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‰ Untuk informasi detail dan pendaftaran resmi, silakan kunjungi website resmi Beasiswa Unggulan."
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp" />

                <!-- Main Action Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDaftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cek Persyaratan dan Daftar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#FDD835"
                    app:cornerRadius="8dp"
                    android:paddingVertical="12dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Close Button Top Right (Outside ScrollView to stay fixed and on top) -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Tutup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>