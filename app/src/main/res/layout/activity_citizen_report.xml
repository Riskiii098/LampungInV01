<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@android:color/black"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Warga"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_rounded"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Cari Laporan"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_search"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Garis Pemisah Search Bar -->
    <View
        android:id="@+id/separator_search"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_search"/>

    <!-- Filter Tabs -->
    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator_search">

        <TextView
            android:id="@+id/btn_disekitarmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disekitarmu"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:background="@drawable/bg_black_rounded_50"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terbaru"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_gray_rounded_50"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- ================= ITEM 1: RATU BERLIANA ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Kategori -->
                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori Kerusakan Infrastruktur"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:layout_marginHorizontal="16dp"/>

                <!-- Profile Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ratu Berliana"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/bg_circle_indicator"
                                android:backgroundTint="#FF7010"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laporan Diproses"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:fontFamily="sans-serif"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Keterangan (Sejajar Nama: 16+40+12 = 68dp) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jalanan berlubang, berbahaya bagi pengendara, mohon perbaikannya, terima kasih"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Gambar (Sejajar Nama) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/jalanan"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="16dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"/>

                <!-- Waktu -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.19 WIB • 14 Jan 26"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Garis Pemisah 1 (Full Width) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"/>

                <!-- Statistik (Sejajar Kiri Profil: 16dp) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 Dukung  0 Komentar"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:paddingVertical="12dp"
                    android:layout_marginStart="16dp"/>

                <!-- Garis Pemisah 2 (Full Width) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Action Buttons (Centered Row) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_like" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dukung"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_komen" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Komentar"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_simpan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpan"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider Bar Antar Item -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F5F5F5"/>

            <!-- ================= ITEM 2: BUDI SANTOSO ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Kategori -->
                <TextView
                    android:id="@+id/tv_kategori_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori Lingkungan"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:layout_marginHorizontal="16dp"/>

                <!-- Profile Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budi Santoso"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/bg_circle_indicator"
                                android:backgroundTint="#FFD000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Menunggu Verifikasi"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:fontFamily="sans-serif"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Keterangan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terdapat tumpukan sampah yang belum diangkut selama 3 hari di area pasar, sangat mengganggu kenyamanan."
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Gambar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/jalanan2"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginEnd="16dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"/>

                <!-- Waktu -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.45 WIB • 14 Jan 26"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Garis Pemisah 1 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"/>

                <!-- Statistik -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 Dukung  0 Komentar"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif"
                    android:paddingVertical="12dp"
                    android:layout_marginStart="16dp"/>

                <!-- Garis Pemisah 2 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_like" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dukung"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_komen" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Komentar"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_simpan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpan"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Garis Pemisah Terakhir (Full Width) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>