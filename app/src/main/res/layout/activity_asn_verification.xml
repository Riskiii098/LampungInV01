<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_yellow_white"
    android:paddingHorizontal="24dp"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Opsi Verifikasi Akun"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Card 1: NIP -->
    <LinearLayout
        android:id="@+id/card_nip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_card_white_stroke"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ImageView
            android:id="@+id/iv_nip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/nipkuning" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NIP yang terdaftar"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <RadioButton
            android:id="@+id/rb_nip"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:button="@null"
            android:background="@drawable/sl_custom_radio"
            android:clickable="false" />

    </LinearLayout>

    <!-- Card 2: Email -->
    <LinearLayout
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card_white_stroke"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/card_nip">

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emailkuning" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email yang terdaftar"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />

        <RadioButton
            android:id="@+id/rb_email"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:button="@null"
            android:background="@drawable/sl_custom_radio"
            android:clickable="false" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_lanjutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lanjutkan"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow_primary"
        app:cornerRadius="8dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_email" />

</androidx.constraintlayout.widget.ConstraintLayout>