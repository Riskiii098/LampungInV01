<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CekHargaPanganActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Kembali"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_search_rounded_white"
                android:hint="Cari Pasar"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_search"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <!-- Divider 1 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/btn_filter"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/black"
                        android:layout_marginEnd="12dp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Chip 1: Kabupaten/Kota -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_white_rounded_50_black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="8dp">

                                            <TextView
                                                android:id="@+id/tv_filter_kabupaten"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kabupaten/Kota"
                                                android:textSize="12sp"
                                                android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/black"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Chip 2: Kecamatan -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_white_rounded_50_black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp">

                                            <TextView
                                                android:id="@+id/tv_filter_kecamatan"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kecamatan"
                                                android:textSize="12sp"
                                                android:textColor="@color/black" />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/black"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <!-- Divider 2 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/soft_yellow_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Pasar di Lampung"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginEnd="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/gintung"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pasar Gintung"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tanjung Karang Pusat"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Bandar Lampung"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginStart="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/panjang"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pasar Panjang"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Panjang"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Bandar Lampung"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_3"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginEnd="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/wayhalim"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pasar Way Halim"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Way Halim"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Bandar Lampung"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginStart="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/waykandis"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pasar Way Kandis"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tanjung Senang"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Bandar Lampung"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card 5 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_5"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginEnd="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_5"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/tamin"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tamin"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tanjung Karang Barat"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Bandar Lampung"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 6 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_6"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_marginStart="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_6"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:src="@drawable/inpreskalianda"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/name_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Inpres Kalianda"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/loc_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kalianda"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>

                                <TextView
                                    android:id="@+id/city_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kab. Lampung Selatan"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="2dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                        <!-- Navigation Buttons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            android:layout_marginEnd="24dp"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="8dp">
            
                            <ImageView
                                android:id="@+id/btn_prev"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/kiri"
                                android:contentDescription="Previous"
                                android:layout_marginEnd="12dp" />
            
                            <ImageView
                                android:id="@+id/btn_next"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/kanan"
                                android:contentDescription="Next" />
            
                        </LinearLayout>
            
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            
            </androidx.constraintlayout.widget.ConstraintLayout>