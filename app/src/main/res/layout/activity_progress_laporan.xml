<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_yellow_white"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Laporan"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_stroke_gray_rounded"
                android:padding="16dp">

                <!-- Vertical Line -->
                <View
                    android:id="@+id/timeline_line"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="#E0E0E0"
                    app:layout_constraintTop_toTopOf="@id/dot_1"
                    app:layout_constraintBottom_toBottomOf="@id/bubble_4"
                    app:layout_constraintStart_toStartOf="@id/dot_1"
                    app:layout_constraintEnd_toEndOf="@id/dot_1"/>

                <!-- Item 1: Menunggu Verifikasi -->
                <View
                    android:id="@+id/dot_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_timeline_dot"
                    android:backgroundTint="#FFD000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/title_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Verifikasi"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_1"
                    app:layout_constraintTop_toTopOf="@id/dot_1"/>

                <TextView
                    android:id="@+id/desc_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Laporan dalam proses pengecekan BIRO PEMERINTAHAN"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_1"/>

                <TextView
                    android:id="@+id/date_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="13 Jan 2026 | 10.20 WIB"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/desc_1"/>

                <LinearLayout
                    android:id="@+id/sender_container_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_1"
                    app:layout_constraintTop_toBottomOf="@id/date_1">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#9E9E9E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratu Berliana"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_circle_indicator"
                        android:backgroundTint="#757575"
                        android:layout_marginHorizontal="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengirim"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bubble_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terimakasih sudah ditindak lanjuti"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:background="@drawable/bg_chat_bubble"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintStart_toEndOf="@id/dot_1"
                    app:layout_constraintTop_toBottomOf="@id/sender_container_1"/>

                <!-- Item 2: Laporan Diterima -->
                <View
                    android:id="@+id/dot_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_timeline_dot"
                    android:backgroundTint="#4BD85B"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bubble_1"/>

                <TextView
                    android:id="@+id/title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Laporan Diterima"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_2"
                    app:layout_constraintTop_toTopOf="@id/dot_2"/>

                <TextView
                    android:id="@+id/desc_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Laporan diterima dan akan diarahkan ke Instansi terkait"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_2"/>

                <TextView
                    android:id="@+id/date_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="13 Jan 2026 | 10.20 WIB"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/desc_2"/>

                <LinearLayout
                    android:id="@+id/sender_container_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_2"
                    app:layout_constraintTop_toBottomOf="@id/date_2">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#9E9E9E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratu Berliana"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_circle_indicator"
                        android:backgroundTint="#757575"
                        android:layout_marginHorizontal="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengirim"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bubble_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ya, Baik, segera."
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:background="@drawable/bg_chat_bubble"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintStart_toEndOf="@id/dot_2"
                    app:layout_constraintTop_toBottomOf="@id/sender_container_2"/>

                <!-- Item 3: Diteruskan ke Instansi -->
                <View
                    android:id="@+id/dot_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_timeline_dot"
                    android:backgroundTint="#302BB1"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bubble_2"/>

                <TextView
                    android:id="@+id/title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Diteruskan ke Instansi"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_3"
                    app:layout_constraintTop_toTopOf="@id/dot_3"/>

                <TextView
                    android:id="@+id/desc_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_3"/>

                <TextView
                    android:id="@+id/date_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="13 Jan 2026 | 10.20 WIB"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/desc_3"/>

                <LinearLayout
                    android:id="@+id/sender_container_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_3"
                    app:layout_constraintTop_toBottomOf="@id/date_3">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#9E9E9E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratu Berliana"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_circle_indicator"
                        android:backgroundTint="#757575"
                        android:layout_marginHorizontal="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengirim"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bubble_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ya, Baik, segera."
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:background="@drawable/bg_chat_bubble"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintStart_toEndOf="@id/dot_3"
                    app:layout_constraintTop_toBottomOf="@id/sender_container_3"/>

                <!-- Item 4: Diproses/Dalam Penanganan -->
                <View
                    android:id="@+id/dot_4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_timeline_dot"
                    android:backgroundTint="#FF7010"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bubble_3"/>

                <TextView
                    android:id="@+id/title_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Diproses/Dalam Penanganan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintTop_toTopOf="@id/dot_4"/>

                <TextView
                    android:id="@+id/desc_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Laporan sedang ditindaklanjuti"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_4"/>

                <!-- Evidence Image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_evidence"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintTop_toBottomOf="@id/desc_4">
                    <ImageView
                        android:id="@+id/iv_evidence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/jalanan2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/date_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="13 Jan 2026 | 10.20 WIB"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_evidence"/>

                <LinearLayout
                    android:id="@+id/sender_container_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintTop_toBottomOf="@id/date_4">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#9E9E9E"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratu Berliana"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:layout_marginStart="8dp"/>
                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_circle_indicator"
                        android:backgroundTint="#757575"
                        android:layout_marginHorizontal="6dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengirim"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bubble_4"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Sudah ditindak lanjuti, terima kasih banyak."
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:background="@drawable/bg_chat_bubble"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintStart_toEndOf="@id/dot_4"
                    app:layout_constraintTop_toBottomOf="@id/sender_container_4"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>