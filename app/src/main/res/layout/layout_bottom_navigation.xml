<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Bottom Navigation Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Separator shadow line at top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Beranda -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nav_activity"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_nav_home"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_home"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/tv_nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Aktivitas -->
        <LinearLayout
            android:id="@+id/nav_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/nav_home"
            app:layout_constraintEnd_toStartOf="@+id/nav_report_space"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_nav_activity"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_activity"
                app:tint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_nav_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktivitas"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Space for Report (Floating) -->
        <Space
            android:id="@+id/nav_report_space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/nav_activity"
            app:layout_constraintEnd_toStartOf="@+id/nav_notification"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Notifikasi -->
        <LinearLayout
            android:id="@+id/nav_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/nav_report_space"
            app:layout_constraintEnd_toStartOf="@+id/nav_profile"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_nav_notification"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_notification"
                app:tint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_nav_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifikasi"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/nav_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_nav_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_nav_profile"
                app:tint="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_nav_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Report Button -->
    <LinearLayout
        android:id="@+id/nav_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"
        android:layout_marginBottom="4dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="@+id/bottom_nav_container"
        app:layout_constraintEnd_toEndOf="@+id/bottom_nav_container"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_nav_container">

        <ImageView
            android:id="@+id/iv_nav_report"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/ic_nav_report"
            android:elevation="20dp"
            android:translationY="-20dp"/>
            
        <TextView
            android:id="@+id/tv_nav_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:elevation="20dp"
            android:layout_marginBottom="8dp"/>
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>