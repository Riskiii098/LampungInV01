<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <!-- 0.7/7 Bagian Atas: Header Hitam -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/black"
        android:paddingHorizontal="24dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Ambil Foto Laporan"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toStartOf="@id/tv_step"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="@id/iv_back" />

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langkah 2/5"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 3.7/7 Bagian Tengah: Abu-abu (Preview Kamera Normal) -->
    <FrameLayout
        android:id="@+id/camera_preview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:background="#EEEEEE">
        
        <!-- ImageView untuk menampilkan hasil foto (State 3) -->
        <ImageView
            android:id="@+id/iv_captured_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@drawable/banner1"/>
            
    </FrameLayout>

    <!-- 2.6/7 Bagian Bawah: Container Utama (Normal) -->
    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6">
        
        <!-- State 3: Tinjau Foto (Review UI) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_review_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingHorizontal="24dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Tombol Ulangi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_retake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Ulangi"
                    android:textColor="@color/white"
                    android:backgroundTint="#333333"
                    app:cornerRadius="8dp"
                    android:paddingVertical="12dp"
                    android:textAllCaps="false"/>

                <!-- Tombol Gunakan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_use_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Gunakan"
                    android:textColor="#F8C300"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="8dp"
                    android:paddingVertical="12dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- State 1: Izin (Permission UI) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_permission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:visibility="visible">
            
            <!-- ... content remains ... -->
            
            <!-- ... content remains same, just adjusted layout ... -->

            <TextView
                android:id="@+id/tv_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Fitur ini mengakses, menyimpan, dan menggunakan:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_info_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Kamera"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Lokasi"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• "
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Media penyimpanan untuk kebutuhan tindak lanjut laporan."
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Baca Kebijakan Privasi"
                android:textColor="#2196F3"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_points" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_allow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F8C300"
                    android:fontFamily="sans-serif-medium"
                    android:paddingVertical="12dp"
                    android:text="Izinkan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    app:elevation="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_allow_app_only"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif"
                    android:paddingVertical="12dp"
                    android:text="Izinkan hanya saat membuka aplikasi"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:cornerRadius="8dp"
                    app:elevation="0dp"
                    app:strokeColor="#F8C300"
                    app:strokeWidth="1dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- State 2: UI Kamera (Camera Controls) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_camera_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingHorizontal="24dp"
            android:visibility="gone">

            <!-- Tombol Shutter (Tengah) -->
            <View
                android:id="@+id/btn_shutter"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_shutter_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Icon Galeri (Kiri) -->
            <FrameLayout
                android:id="@+id/btn_gallery_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_circle_white"
                app:layout_constraintTop_toTopOf="@id/btn_shutter"
                app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_shutter">

                <ImageView
                    android:id="@+id/btn_gallery"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gallery"
                    app:tint="#808080" />
            </FrameLayout>

            <!-- Icon Flash Off (Kanan) -->
            <FrameLayout
                android:id="@+id/btn_flash_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_circle_white"
                app:layout_constraintTop_toTopOf="@id/btn_shutter"
                app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
                app:layout_constraintStart_toEndOf="@id/btn_shutter"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/btn_flash"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flash_off"
                    app:tint="#808080" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</LinearLayout>