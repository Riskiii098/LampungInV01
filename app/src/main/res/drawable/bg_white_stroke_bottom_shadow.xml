<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer (Bottom) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light Gray for Shadow -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <!-- Main Layer (White with Stroke) -->
    <item android:bottom="3dp"> <!-- Offset to reveal shadow at bottom -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Gray Border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>